{
  "base_score": 50,
  "rules": [
    {
      "field": "age",
      "conditions": [
        { "type": "less_than", "value": 25, "points": 10, "label": "Applicant is under 25" },
        { "type": "greater_than", "value": 40, "points": -10, "label": "Applicant is over 40" }
      ]
    },
    {
      "field": "housing",
      "conditions": [
        { "type": "equals", "value": "Rent", "points": 10, "label": "Housing status is 'Rent'" },
        { "type": "equals", "value": "Own", "points": -15, "label": "Housing status is 'Own'" }
      ]
    },
    {
      "field": "credit_amount",
      "conditions": [
        { "type": "greater_than", "value": 10000, "points": 20, "label": "Credit amount is over €10,000" },
        { "type": "less_than", "value": 2000, "points": -5, "label": "Credit amount is under €2,000" }
      ]
    },
    {
      "field": "duration",
      "conditions": [
        { "type": "greater_than", "value": 36, "points": 15, "label": "Loan duration is over 36 months" }
      ]
    },
    {
      "field": "job",
      "conditions": [
        { "type": "equals", "value": "Unskilled", "points": 10, "label": "Job type is 'Unskilled'" },
        { "type": "equals", "value": "Management", "points": -20, "label": "Job type is 'Management'" }
      ]
    }
  ],
  "risk_categories": [
    { "category": "High Risk", "threshold": 70 },
    { "category": "Medium Risk", "threshold": 40 },
    { "category": "Low Risk", "threshold": 0 }
  ]
}
